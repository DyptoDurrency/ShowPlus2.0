<% include ../partials/header %>

<div class="row">
    <div class="col-md-4">
        <h1><%= user.firstName + " " + user.lastName %></h1>
        <img src="<%= user.avatar%>" alt="user profile image">
    </div>
    <div class="col-md-8">
        <h2><%=user.bio%></h2>
        <h3><%= user.username %>'s exhibitions on Showplus:</h3>
        <ul>
            <% exhibitions.forEach(function(exhibition) { %>
                <li>
                    <a href="/exhibitions/<%=exhibition.id%>"><%= exhibition.name %></a>
                </li>
            <% }) %>
        </ul>
        
    </div>
</div>    



<% include ../partials/footer %>