<% include ../partials/header %>

<div class="container">
    <h1>Edit <%= exhibition.name %> </h1>
    <div class="row">
       <div id="showForm">
            <form action="/exhibitions/<%= exhibition._id %>?_method=PUT" method="POST">
                <div class="form-group">
                  <input class="form-control" type="text" name="exhibition[name]" value="<%=exhibition.name%>">
                </div>
                <div class="form-group">
                <div class="form-group">
                  <input class="form-control" type="number" name="exhibition[price]" value="<%=exhibition.price%>" min="0.01" step="0.01">
                </div>
                    <input class="form-control" type="text" name="exhibition[image]" value="<%=exhibition.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="exhibition[description]" value="<%=exhibition.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-primary btn-block">Submit!</button>  
                </div>
                
                
            </form>
            <!--<br>-->
            <a href="/exhibitions">Go Back</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>